extends ../../views/layout

block content

  h1 Enter your details to start jammin

  form(action='/users', method='post', enctype='multipart/form-data')

    div(class='new-form')

      div(class='form-group')

        label#name(for='name') Name:
        input(type='text', name='name', class="form-control")

      div(class='form-group')

        label#username(for='username') Username:
        input(type='text', name='username', class="form-control")

      div(class='form-group')

        label#location(for='location') Location:
        input(type='text', name='location', class="form-control")

      div(class='form-group')

        label#genres(for='genres') Genres:
        input(type='text', name='genres', class="form-control")

      div(class='form-group')

        label#instruments(for='instruments') Instruments:
        input(type='text', name='instruments', class="form-control")

      div(class='form-group')

        label#bio(for='bio') Bio:
        textarea(type='text', name='bio', class="form-control", rows="6")

      div(class='form-group')

        label#image(for='image') Image:
        input(type='file', name='image')

      input(type='submit', value="Get Jammin'", class="btn btn-default")
