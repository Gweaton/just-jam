extends ../../views/layout

block content

  h1 Jammers...


  form(action='/jammers', method='get')

    div(class='new-form')

      div(class='form-group')

        //- input(type='text', name='instruments', value="I am looking for a...", class="form-control")
        select(name ="instruments" class="form-control")
          option(value="" disabled="disabled" selected="selected") I am a looking for a...
          option(value="Singer") Singer
          option(value="Guitarist") Guitarist
          option(value="Bassist") Bassist
          option(value="Keyboardist") Keyboardist
          option(value="Drummer") Drummer

      input(type='submit', value="Search", class="btn btn-default")

  div(class="container")
    div(class="row user-list")
      each jammer, i in jammers
          div(class="col-md-4")
            div(class="user-list")
              img(src= jammer.imagePath, class="img-custom img-responsive")
              h2=jammer.name
              p= jammer.instruments
              p
                a(href=`/jammers/${jammer._id}`) Show
