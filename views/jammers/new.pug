extends ../../views/layout

block content

  h1 Enter your details to start jammin'!

  form(id='jammer-form', action='/jammers', method='post', enctype='multipart/form-data')

    div(class='new-form')

      div(class='form-group')

        label#name(for='name') Name:
        input(type='text', name='name', class="form-control")

      div(class='form-group')

        label#location(for='location') Location:
        input(type='text', name='location', class="form-control")

      div(class='form-group')

        label#genres(for='genres') Genres:
        input(type='text', name='genres', class="form-control")

      div(class='form-group')
        label What instrument do you play?
        select(name ="instruments" class="form-control")
          option(value="" disabled="disabled" selected="selected") I am a...
          option(value="Singer") Singer
          option(value="Guitarist") Guitarist
          option(value="Bassist") Bassist
          option(value="Keyboardist") Keyboardist
          option(value="Drummer") Drummer
          option(value="Other...") Other...

      div(class='form-group')

        label#bio(for='bio') Bio:
        textarea(type='text', name='bio', class="form-control", rows="6")

      div(class='form-group')

        label#image(for='image') Image:
        input(type='file', name='image',  accept="image/*")

      div(class='form-group')

        label#audio(for='audio') Audio:
        input(type='file', name='audio', accept="audio/*")

      input(type='submit', value="Get Jammin'", class="btn btn-default")
