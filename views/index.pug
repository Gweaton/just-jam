extends layout

block content
  body
    if message.length
      .alert.alert-danger #{message}


    div(class="banner-custom")
      div(class="text-center")
        img(src="/images/logo.png" class='img-responsive img-index')
        p.lead Find your musical soulmates.
        a(href='users/login', class="btn btn-default")
          span
          |  Login
        a(href='users/signup', class="btn btn-default")
          span
          |  Signup
