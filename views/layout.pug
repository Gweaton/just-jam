doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Just Jam
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
  body
    nav(class='navbar-custom navbar navbar-static-top')
        div(class="container-fluid")
          div(class="navbar-header")
            div(class="navbar-collapse" id="bs-example-navbar-collapse-1")
              a(class='navbar-left' href='/jammers')
                img(src="/images/logo.png" class="nav-logo")
              form(class="navbar-form navbar-left", action='/jammers', method='get')
                div(class='form-group')
                  select(name ="instruments" class="form-control" id="find-by-instrument")
                    option(value="" disabled="disabled" selected="selected") I am a looking for a...
                    option(value="Singer") Singer
                    option(value="Guitarist") Guitarist
                    option(value="Bassist") Bassist
                    option(value="Keyboardist") Keyboardist
                    option(value="Drummer") Drummer
                    input(type='submit', value="Search", class="btn btn-default" id="submit-button")
              ul(class="nav navbar-nav navbar-right")
                li(class="nav-custom")
                  a(href='/jammers/') View all jammers
                li(class='dropdown')
                   a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Dropdown
                    span(class="caret")
                   ul(class='dropdown-menu')
                    if (user)
                      li
                        a(href='/chats') View all chats
                      li
                        a(href='/users/profile') My profile
                      li
                        a(href='/users/logout') Log Out
                    else
                      li
                        a(href='/users/login') Log in
                      li
                        a(href='/users/signup') Sign up

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
    block content
