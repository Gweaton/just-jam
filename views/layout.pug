doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Just Jam
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
  body
    nav(class='navbar-custom navbar navbar-fixed-top')
        div(class="container-fluid")
          div(class="navbar-header")
            button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
              span(class="sr-only") Toggle navigation
              span(class="icon-bar")
              span(class="icon-bar")
              span(class="icon-bar")
            a(class='navbar-brand' href='/jammers')
              img(src="/images/logo.png" class="nav-logo")

            div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
  
              form(class="navbar-form navbar-left", action='/jammers', method='get')
                div(class='form-group')
                  select(name ="instruments" class="form-control")
                    option(value="" disabled="disabled" selected="selected") I am a looking for a...
                    option(value="Singer") Singer
                    option(value="Guitarist") Guitarist
                    option(value="Bassist") Bassist
                    option(value="Keyboardist") Keyboardist
                    option(value="Drummer") Drummer
                    input(type='submit', value="Search", class="btn btn-default")
              ul(class="nav navbar-nav navbar-right")
                li(class="nav-custom")
                  a(href='/jammers/') View all jammers
                if (user)
                  li(class="nav-custom")
                    a(href='/chats') View all chats
                  li(class="nav-custom")
                    a(href='/users/profile') My profile
                  li(class='nav-custom')
                    a(href='/users/logout') Log Out
                else
                  li(class="nav-custom")
                    a(href='/users/login') Log in
                  li(class="nav-custom")
                    a(href='/users/signup') Sign up
    block content
